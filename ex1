import java.util.Scanner;

public class Produit {
    private int identifiant;
    private String libelle;
    private String marque;
    private double prix;
    private Date dateExpiration;

    public Produit() {
    }

    public Produit(int identifiant, String libelle, String marque, double prix) {
        this.identifiant = identifiant;
        this.libelle = libelle;
        this.marque = marque;
        this.prix = prix;
    }

    public int getIdentifiant() {
        return identifiant;
    }

    public void setIdentifiant(int identifiant) {
        this.identifiant = identifiant;
    }

    public String getLibelle() {
        return libelle;
    }

    public void setLibelle(String libelle) {
        this.libelle = libelle;
    }

    public String getMarque() {
        return marque;
    }

    public void setMarque(String marque) {
        this.marque = marque;
    }

    public double getPrix() {
        return prix;
    }

    public void setPrix(double prix) {
        this.prix = prix;
    }

    public Date getDateExpiration() {
        return dateExpiration;
    }

    public void setDateExpiration(Date dateExpiration) {
        this.dateExpiration = dateExpiration;
    }

    public void afficher() {
        System.out.println("Identifiant: " + identifiant);
        System.out.println("Libellé: " + libelle);
        System.out.println("Marque: " + marque);
        System.out.println("Prix: " + prix + " DT");
        if (dateExpiration != null) {
            System.out.println("Date d'expiration: " + dateExpiration);
        }
        System.out.println("---");
    }

    @Override
    public String toString() {
        String result = "Produit [ID=" + identifiant + ", Libellé=" + libelle + 
                       ", Marque=" + marque + ", Prix=" + prix + " DT";
        if (dateExpiration != null) {
            result += ", Date d'expiration=" + dateExpiration;
        }
        result += "]";
        return result;
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println(" Créer un produit vide");
        Produit produitVide = new Produit();
        System.out.println("Produit vide créé");
        System.out.println();

        System.out.println(" Créer des nouveaux produits ");
        Produit produit1 = new Produit(1021, "Lait et Delice", "Delice", 0);
        Produit produit2 = new Produit(2510, "Yaourt et Vitalait", "Vitalait", 0);
        Produit produit3 = new Produit(3250, "Tomate, Sicam et 1.200", "Sicam", 1.200);
        System.out.println("Produits créés");
        System.out.println();

        System.out.println(" Afficher les détails de chaque produit ");
        produit1.afficher();
        produit2.afficher();
        produit3.afficher();
        System.out.println();

        System.out.println(" Attribuer le prix 0.700 au produit lait ");
        produit1.setPrix(0.700);
        System.out.println("Prix modifié pour le produit lait:");
        produit1.afficher();
        System.out.println();

        System.out.println(" Compléter les informations manquantes ");
        System.out.print("Entrez le prix pour " + produit2.getLibelle() + ": ");
        double prixYaourt = scanner.nextDouble();
        produit2.setPrix(prixYaourt);
        scanner.nextLine();

        System.out.println("\nInformations complétées:");
        produit2.afficher();
        System.out.println();

        System.out.println(" Afficher les produits modifiés ");
        produit1.afficher();
        produit2.afficher();
        produit3.afficher();
        System.out.println();

        System.out.println(" Afficher les produits avec toString() ");
        System.out.println(produit1.toString());
        System.out.println(produit2.toString());
        System.out.println(produit3.toString());
        System.out.println();
      
        System.out.println();

        System.out.println(" Ajouter date d'expiration ");
        produit1.setDateExpiration(new Date(2025 - 1900, 11, 31));
        produit2.setDateExpiration(new Date(2025 - 1900, 10, 15));
        produit3.setDateExpiration(new Date(2026 - 1900, 0, 20));

        System.out.println("Produits avec dates d'expiration:");
        produit1.afficher();
        produit2.afficher();
        produit3.afficher();

        System.out.println("Avec toString():");
        System.out.println(produit1);
        System.out.println(produit2);
        System.out.println(produit3);

        scanner.close();
    }
}
